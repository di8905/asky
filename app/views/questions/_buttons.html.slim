
  -if can?(:edit, question)
    = link_to 'edit question', '#', id: 'edit-question-link'
    |  |     
  -if can?(:destroy, question)
    =link_to 'delete question', question_path(question), method: :delete, data: { confirm: 'Sure?' }
    |  |
  -if user_signed_in?
    =link_to 'add a comment', new_question_comment_path(question), remote: true
    |  |
  -if current_user && question.subscribers.include?(current_user)
    =link_to 'unsubscribe', unsubscribe_question_path(question), method: :patch, remote: true
  -else  
    =link_to 'subscribe', subscribe_question_path(question), method: :patch, remote: true
