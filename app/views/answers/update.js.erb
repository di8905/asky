<% if @answer.errors.present? %>
  $('#errors-field').html('<div class="alert fade in alert-danger">' + "<%= j render 'common/errors', resource: @answer %>"  + '</div>' )
<% else %>
 $('#errors-field').html('')
 var answer_id = <%= @answer.id %>;
 $('form#edit-answer-form-' + answer_id).hide();
 $('*[data-answer-id="'+answer_id+'"]').show();
 $('#answer-' + answer_id + '-body').text('<%= j @answer.body %>')
<% end %>   
